{
  "name": "interviewr-client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@hydrokit/button": "^0.6.0",
    "@hydrokit/formfield": "^0.6.0",
    "@hydrokit/textfield": "^0.6.0",
    "@types/graphql": "^0.12.4",
    "apollo-client-preset": "^1.0.8",
    "graphql": "0.11.7",
    "graphql-tag": "^2.5",
    "mobx": "^3.5.1",
    "mobx-react": "^4.4.2",
    "npm-run-all": "^4.1.2",
    "react": "^16.2.0",
    "react-apollo": "^2.0.4",
    "react-dom": "^16.2.0",
    "react-scripts-ts": "^2.13.0"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules --include-path ../../node_modules src/ -o src/",
    "watch-css": "yarn build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules --include-path ../../node_modules src/ -o src/ --watch --recursive",
    "start-js": "react-scripts-ts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts-ts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "gql": "yarn gql:schema && yarn gql:build",
    "gql:schema": "apollo-codegen introspect-schema http://localhost:8000/graphql --output schema.json",
    "gql:build": "apollo-codegen generate '**/*.tsx' --schema schema.json --target typescript --output src/operation-result-types.ts"
  },
  "devDependencies": {
    "@types/jest": "^22.1.2",
    "@types/node": "^9.4.5",
    "@types/react": "^16.0.37",
    "@types/react-dom": "^16.0.4",
    "apollo-codegen": "^0.18.3",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.1.2",
    "typescript": "^2.7.0"
  },
  "proxy": "http://localhost:8000"
}
